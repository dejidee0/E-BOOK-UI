@page "/update_user_role"
@attribute [Authorize(Roles ="ADMIN")]
<div class="shadow-sm p-5 rounded-3">
    <h1>Update User Role</h1>
    <EditForm Model="userRoleDetail">
        <div class="cusgap">
        <div class="form-group col-12">
            <label for="email">Email</label>
            <InputText id="email" class="form-control" placeholder="Email" @bind-Value="userRoleDetail.email" />
        </div>
        <div class="form-group col-12">
            <label for="gender">Role</label>
                <InputSelect id="role" @bind-Value="userRoleDetail.role" class="form-control">
                <option value="ADMIN">Admin</option>
                <option value="USER">User</option>
            </InputSelect>
        </div>
        <div class="d-flex gap-4">
            <CustomBtn path="/admin-dashboard" cssClass="cusBtn cusBtn2 text-white" text="Back" />
            <CustomBtn OnClick="@HandleRole" cssClass="cusBtn cusBtn3 text-white" text="Update" />
        </div>
        </div>
    </EditForm>
</div>
<style>
    .cusgap{
        display:flex;
        flex-direction:column;
        gap:1rem;
    }
</style>
