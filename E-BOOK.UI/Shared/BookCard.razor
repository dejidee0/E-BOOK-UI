<a href="@bookUrl">
<div class="bookcard">
    <img src="@BookImg" />
    <div>
        <p>@Title</p>
        <p>@Author</p>
    </div>
    <div>
        @for (int i = 0; i < Ratings; i++)
        {
            <i class="bi bi-star-fill"></i>
        }
    </div>
    <p>Available</p>
</div>
</a>
<style>
    .bookcard{
        display:flex;
        flex-direction:column;
        gap: 2px;
        width: 170px;
    }
    .bookcard img{
        width: 100%;
        max-height: 200px;
    }
</style>